<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:layout_marginBottom="60dp"
            android:clipChildren="false"
            android:background="@color/colorLightGrey"
            android:scrollbarThumbVertical="@android:color/transparent"
>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:indeterminate="true"
            android:visibility="gone"
        />
        <LinearLayout
            android:id="@+id/overViewLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/activity_horizontal_margin"
            >
                <TextView
                    android:id="@+id/ownerGreetingsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_greetings"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_text"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:textSize="@dimen/text_size_extra_small"
                />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/medium_margin"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/card_radius"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                >
                    <LinearLayout
                        android:id="@+id/cameraFeedLinear"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:background="@color/colorLightPink"
                    >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/ic_cctv"
                            android:layout_gravity="center_horizontal"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/camera_feed"
                            android:textSize="@dimen/text_size_small"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_gravity="center_horizontal"
                        />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/cameraFeedLinear"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/activity_horizontal_margin"

                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activity_date"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_small"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="6"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                        >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical"
                            >
                                <TextView
                                    android:id="@+id/allowedPersonsCountText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/visitors_count"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold"
                                />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/visitors_label"
                                    android:textColor="@color/colorDarkPink"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:textSize="@dimen/text_size_extra_small"
                                />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical"
                            >
                                <TextView
                                    android:id="@+id/disallowedPersonsCountText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/streams_count"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold"
                                />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/streams_label"
                                    android:textColor="@color/colorDarkPink"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:textSize="@dimen/text_size_extra_small"
                                />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical"
                            >
                                <TextView
                                    android:id="@+id/motionsCountText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/motions_count"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold"
                                />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/motion_label"
                                    android:textColor="@color/colorDarkPink"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:textSize="@dimen/text_size_extra_small"
                                />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/internetMonitorCardView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/medium_margin"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/card_radius"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:id="@+id/internetMonitorLinear"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:background="@color/colorLightBlue"
                    >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/ic_wifi_black"
                            android:layout_gravity="center_horizontal"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internet_monitor"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                        />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/internetMonitorLinear"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/medium_margin"
                        android:layout_marginTop="@dimen/medium_margin"
                    >
                        <TextView
                            android:id="@+id/internetStatusTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internet_status"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_extra_small"
                            android:layout_marginBottom="@dimen/card_margin"
                        />
                        <ImageView
                            android:id="@+id/internetStatusImg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_wifi"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/card_margin"
                        />
                        <TextView
                            android:id="@+id/internetDurationCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internet_off_status_desc"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_extra_small"
                            android:layout_marginTop="@dimen/card_margin"
                            android:textAlignment="center"
                        />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_pressure_label"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/colorBlack"
                android:layout_margin="@dimen/activity_horizontal_margin"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
            >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/medium_margin"
                    android:layout_weight="2"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/card_radius"
                >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                    >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_thermometer"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/temperature_label"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorBlack"
                        />
                        <TextView
                            android:id="@+id/temperatureText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/temperature"
                            android:textSize="@dimen/text_size_extra_small"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:textColor="@color/colorBlack"
                        />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/medium_margin"
                    android:layout_weight="2"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/card_radius"
                >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                    >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_meter"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pressure_label"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorBlack"
                        />
                        <TextView
                            android:id="@+id/pressureText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/pressure"
                            android:textSize="@dimen/text_size_extra_small"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:textColor="@color/colorBlack"
                        />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>